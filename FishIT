-- ====================================================
-- [CORE LOGIC] SMART MINING & DETECTION REWORK
-- ====================================================

local function GetChar() return Player.Character or Player.CharacterAdded:Wait() end
local function GetRoot() local c = Player.Character; return c and c:FindFirstChild("HumanoidRootPart") end
local function GetHum() local c = Player.Character; return c and c:FindFirstChild("Humanoid") end

-- [SPAWN DETECTOR SYSTEM]
local ConnectedFolders = {}
local function SetupSpawnListener(folderName)
    if ConnectedFolders[folderName] then return end -- Prevent double connect
    
    task.spawn(function()
        local Islands = Services.Workspace:WaitForChild("Islands", 10)
        if not Islands then return end
        
        -- Cari path spesifik folder crystal
        local TargetFolder = nil
        if folderName == "Crystal" then
            TargetFolder = Islands:FindFirstChild("Crystal Depths") and Islands["Crystal Depths"]:FindFirstChild("Crystals")
        elseif folderName == "Lava" then
            TargetFolder = Islands:FindFirstChild("Lava Basin") and Islands["Lava Basin"]:FindFirstChild("Crystals")
        end

        if TargetFolder then
            ConnectedFolders[folderName] = true
            Log("Listening spawn for: " .. folderName)
            
            TargetFolder.ChildAdded:Connect(function(child)
                if States.DetectSpawn then
                    task.wait(0.5) -- Wait load
                    if child:IsA("Model") or child:IsA("BasePart") then
                        Log("[SPAWN] New Crystal detected at " .. folderName .. "!")
                        print(">>> [SERAPHIN] NEW CRYSTAL SPAWNED: " .. child.Name .. " <<<")
                    end
                end
            end)
        end
    end)
end

-- [AI DELAY]
local function SmartWait(min, max)
    local randomDelay = math.random(min * 100, max * 100) / 100
    task.wait(randomDelay)
end

-- [SAFE MOVE REWORKED]
-- Lebih lambat, lebih aman, menggunakan EasingStyle Sine agar tidak linear (robotik)
local function SafeMove(targetCFrame)
    local hrp = GetRoot()
    if not hrp then return end
    
    local dist = (hrp.Position - targetCFrame.Position).Magnitude
    
    if dist < 10 then
        hrp.CFrame = targetCFrame
        return
    end
    
    -- KECEPATAN DIKURANGI AGAR TIDAK SUSPICION
    -- Sebelumnya 280, sekarang 195 (Lebih "Manusiawi")
    local speed = 195
    local time = dist / speed
    
    -- Gunakan Sine InOut agar gerakan halus (Slow start - Fast - Slow stop)
    local tweenInfo = TweenInfo.new(time, Enum.EasingStyle.Sine, Enum.EasingDirection.InOut)
    local tween = Services.TweenService:Create(hrp, tweenInfo, {CFrame = targetCFrame})
    
    States.Noclip = true 
    tween:Play()
    tween.Completed:Wait()
    States.Noclip = false
    
    -- WAJIB: Stabilization Wait
    -- Beri jeda 0.3 - 0.5 detik agar server 'melihat' kita diam di tempat sebelum interaksi
    hrp.AssemblyLinearVelocity = Vector3.zero
    hrp.AssemblyAngularVelocity = Vector3.zero
    task.wait(math.random(35, 55)/100) -- Wait 0.35s - 0.55s
end

-- [FUNGSI EQUIP SYSTEM]
local function ForceClearHand()
    local char = Player.Character
    if not char then return end
    for _, t in pairs(char:GetChildren()) do
        if t:IsA("Tool") then t.Parent = Player.Backpack end
    end
end

local function ForceEquipBag(keyword)
    local char = Player.Character
    local backpack = Player.Backpack
    if not char or not backpack then return false end
    for _, t in pairs(backpack:GetChildren()) do
        if t:IsA("Tool") and string.find(string.lower(t.Name), keyword) then
            t.Parent = char 
            return true
        end
    end
    return false
end

-- [MINING REWORKED]
local function SmartMining(folder, toggleState)
    local activeList = {}
    for _, item in ipairs(folder:GetChildren()) do
        if item:IsA("Model") or item:IsA("BasePart") then
            local prompt = item:FindFirstChildWhichIsA("ProximityPrompt", true)
            if prompt and prompt.Enabled then table.insert(activeList, item) end
        end
    end

    if #activeList == 0 then return false end
    
    local hrp = GetRoot()
    local RemoteEquip = Services.ReplicatedStorage:WaitForChild("Packages"):WaitForChild("_Index"):WaitForChild("sleitnick_net@0.2.0"):WaitForChild("net"):WaitForChild("RE/EquipToolFromHotbar")

    States.IsMining = true
    local SafeReturnPos = hrp.CFrame
    
    ForceClearHand()
    SmartWait(0.2, 0.3)
    
    for i, node in ipairs(activeList) do
        if not States[toggleState] then break end
        
        local prompt = node:FindFirstChildWhichIsA("ProximityPrompt", true)
        if prompt and prompt.Enabled then
            local targetPos = nil
            if node:IsA("Model") then targetPos = node:GetPivot().Position
            elseif node:IsA("BasePart") then targetPos = node.Position end
            
            if targetPos then
                hrp.Anchored = false
                
                -- Posisi sedikit menjauh agar ProximityPrompt 'melihat' karakter datang
                local approachPos = CFrame.lookAt(targetPos + Vector3.new(4, 2, 0), targetPos)
                
                SafeMove(approachPos)
                
                hrp.Anchored = true 
                
                -- Equip Pickaxe
                local equipped = ForceEquipBag("pick")
                if not equipped then pcall(function() RemoteEquip:FireServer(2) end) end
                
                -- Jeda sebelum interaksi (Anti-Instant Interaction)
                SmartWait(0.4, 0.6)
                
                -- [INTERAKSI PERBAIKAN]
                -- Mengecek HoldDuration agar tidak di-kick karena instant complete
                if prompt.HoldDuration > 0 then
                    Log("Mining... (" .. prompt.HoldDuration .. "s)")
                    fireproximityprompt(prompt) -- Trigger awal
                    task.wait(prompt.HoldDuration + 0.1) -- Tunggu sesuai durasi game
                else
                    fireproximityprompt(prompt)
                end

                -- Tunggu animasi/hasil mining selesai
                SmartWait(2.5, 3.0)
                ForceClearHand()
            end
        end
    end

    hrp.Anchored = false
    SafeMove(SafeReturnPos)
    hrp.AssemblyLinearVelocity = Vector3.zero
    
    SmartWait(0.5, 0.7)
    pcall(function() RemoteEquip:FireServer(1) end) 
    
    States.IsMining = false
    return true
end

