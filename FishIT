--[[
    SIMPLE AUTO TOOL CLICKER (UI VERSION)
    Fungsi: Otomatis mengaktifkan tool (pedang/mining/pancingan)
]]

local Players = game:GetService("Players")
local CoreGui = game:GetService("CoreGui")
local LocalPlayer = Players.LocalPlayer

-- Konfigurasi Awal
getgenv().AutoClick = {
    Enabled = false,
    Delay = 0.1 -- Kecepatan klik (detik)
}

-- Hapus UI lama jika ada
if getgenv().ClickUI then getgenv().ClickUI:Destroy() end

-- 1. Membuat UI
local ScreenGui = Instance.new("ScreenGui")
ScreenGui.Name = "SimpleAutoClicker"
ScreenGui.Parent = CoreGui

local MainFrame = Instance.new("Frame")
MainFrame.Name = "MainFrame"
MainFrame.Size = UDim2.new(0, 200, 0, 100)
MainFrame.Position = UDim2.new(0.5, -100, 0.5, -50)
MainFrame.BackgroundColor3 = Color3.fromRGB(30, 30, 35)
MainFrame.BorderSizePixel = 0
MainFrame.Active = true
MainFrame.Draggable = true -- Bisa digeser
MainFrame.Parent = ScreenGui

local UICorner = Instance.new("UICorner")
UICorner.CornerRadius = UDim.new(0, 8)
UICorner.Parent = MainFrame

-- Judul
local Title = Instance.new("TextLabel")
Title.Text = "⚔️ AUTO TOOL"
Title.Size = UDim2.new(1, 0, 0, 30)
Title.BackgroundTransparency = 1
Title.TextColor3 = Color3.fromRGB(255, 255, 255)
Title.Font = Enum.Font.GothamBold
Title.Parent = MainFrame

-- Input Delay
local DelayInput = Instance.new("TextBox")
DelayInput.Size = UDim2.new(0, 180, 0, 25)
DelayInput.Position = UDim2.new(0, 10, 0, 35)
DelayInput.PlaceholderText = "Speed (0.1)"
DelayInput.Text = tostring(getgenv().AutoClick.Delay)
DelayInput.BackgroundColor3 = Color3.fromRGB(50, 50, 55)
DelayInput.TextColor3 = Color3.fromRGB(255, 255, 255)
DelayInput.Font = Enum.Font.Gotham
DelayInput.Parent = MainFrame
local InputCorner = Instance.new("UICorner"); InputCorner.Parent = DelayInput

DelayInput.FocusLost:Connect(function()
    local num = tonumber(DelayInput.Text)
    if num then getgenv().AutoClick.Delay = num end
end)

-- Tombol Toggle
local ToggleBtn = Instance.new("TextButton")
ToggleBtn.Size = UDim2.new(0, 180, 0, 30)
ToggleBtn.Position = UDim2.new(0, 10, 0, 65)
ToggleBtn.BackgroundColor3 = Color3.fromRGB(200, 60, 60)
ToggleBtn.Text = "START"
ToggleBtn.TextColor3 = Color3.fromRGB(255, 255, 255)
ToggleBtn.Font = Enum.Font.GothamBold
ToggleBtn.Parent = MainFrame
local BtnCorner = Instance.new("UICorner"); BtnCorner.Parent = ToggleBtn

-- 2. Logika Utama
local function StartClicking()
    task.spawn(function()
        while getgenv().AutoClick.Enabled do
            local Char = LocalPlayer.Character
            if Char then
                -- Cari tool yang sedang dipegang
                local Tool = Char:FindFirstChildWhichIsA("Tool")
                if Tool then
                    Tool:Activate() -- Fungsi bawaan Roblox untuk menggunakan alat
                end
            end
            task.wait(getgenv().AutoClick.Delay)
        end
    end)
end

ToggleBtn.MouseButton1Click:Connect(function()
    getgenv().AutoClick.Enabled = not getgenv().AutoClick.Enabled
    
    if getgenv().AutoClick.Enabled then
        ToggleBtn.Text = "STOP"
        ToggleBtn.BackgroundColor3 = Color3.fromRGB(60, 180, 60)
        StartClicking()
    else
        ToggleBtn.Text = "START"
        ToggleBtn.BackgroundColor3 = Color3.fromRGB(200, 60, 60)
    end
end)

getgenv().ClickUI = ScreenGui
