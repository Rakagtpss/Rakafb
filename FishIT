    AutoCrystal = false,
    IsMining = false,
    IsFishing = false,
    SavedHomeCFrame = nil
}

local Locations = {
    LavaBasin = CFrame.new(860.08, 85.86, -10094.87),
    CrystalDepths = CFrame.new(5820.14, -907.79, 15424.53)
}

