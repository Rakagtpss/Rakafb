-- ====================================================
-- [CORE SYSTEM]
-- ====================================================

local function GetRoot() return LocalPlayer.Character and LocalPlayer.Character:FindFirstChild("HumanoidRootPart") end
local function GetHum() return LocalPlayer.Character and LocalPlayer.Character:FindFirstChild("Humanoid") end
local function Notify(msg, color) StatusLabel.Text = msg; StatusLabel.TextColor3 = color or Color3.fromRGB(255, 255, 255) end

local function SetAnchor(bool)
    local hrp = GetRoot()
    if hrp then 
        hrp.Anchored = bool 
        if bool then hrp.Velocity = Vector3.zero end
    end
end

-- [NOCLIP]
local function EnableNoClip()
    local Connection = Services.RunService.Stepped:Connect(function()
        if not States.AutoCrystal then return end 
        if LocalPlayer.Character then
            for _, part in pairs(LocalPlayer.Character:GetDescendants()) do
                if part:IsA("BasePart") and part.CanCollide then part.CanCollide = false end
            end
        end
    end)
    return Connection
end

local function FlyTo(targetCFrame)
    local hrp = GetRoot()
    if not hrp then return end
    SetAnchor(false)
    
    local dist = (hrp.Position - targetCFrame.Position).Magnitude
    local speed = dist > 100 and 100 or 60
    local tweenInfo = TweenInfo.new(dist/speed, Enum.EasingStyle.Linear)
    
    local tween = Services.TweenService:Create(hrp, tweenInfo, {CFrame = targetCFrame})
    tween:Play()
    tween.Completed:Wait()
    
    hrp.CFrame = targetCFrame 
    SetAnchor(true)
end

local function EquipTool(name)
    local backpack = LocalPlayer.Backpack
    local char = LocalPlayer.Character
    local tool
    
    for _, t in pairs(char:GetChildren()) do if t:IsA("Tool") and t.Name:lower():find(name) then tool = t break end end
    if not tool then
        for _, t in pairs(backpack:GetChildren()) do if t:IsA("Tool") and t.Name:lower():find(name) then tool = t break end end
    end

    if tool then
        if tool.Parent ~= char then GetHum():EquipTool(tool) end
    else
        local slot = (name == "pick" or name == "axe") and 2 or 1
        NetPath["RE/EquipToolFromHotbar"]:FireServer(slot)
    end
end

-- ====================================================
-- [CAMERA FIX LOGIC - NEW FEATURE]
-- ====================================================

local function ResetCameraAngle()
    -- Fungsi ini memaksa kamera mundur dan melihat ke karakter dari sudut yang enak
    local cam = Services.Workspace.CurrentCamera
    local hrp = GetRoot()
    
    if cam and hrp then
        cam.CameraType = Enum.CameraType.Custom
        cam.CameraSubject = GetHum()
        
        -- Kita paksa kamera mundur 12 stud dan naik 6 stud dari karakter
        local backPos = hrp.CFrame * CFrame.new(0, 6, 12)
        local targetLook = hrp.Position
        
        -- Gunakan Tween agar transisi kamera halus (tidak bikin pusing)
        local camTween = Services.TweenService:Create(cam, TweenInfo.new(0.5, Enum.EasingStyle.Quad), {
            CFrame = CFrame.lookAt(backPos.Position, targetLook)
        })
        camTween:Play()
    end
end

local function MakeTransparent(part)
    -- Membuat Crystal jadi tembus pandang (Anti-Buta)
    if part and part:IsA("BasePart") then
        part.Transparency = 0.8
        part.CanCollide = false
    elseif part and part:IsA("Model") then
        for _, p in pairs(part:GetDescendants()) do
            if p:IsA("BasePart") then
                p.Transparency = 0.8
                p.CanCollide = false
            end
        end
    end
end

local function GetGroundedPosition(crystalPart)
    local cf = crystalPart.CFrame
    local pos = cf.Position
    local up = cf.UpVector 
    local look = cf.LookVector
    
    local dotY = up:Dot(Vector3.new(0,1,0))
    local idealPos
    local isCeiling = false

    -- [JARAK DIPERLEBAR AGAR KAMERA AMAN]
    if dotY > 0.8 then 
        idealPos = pos + Vector3.new(0, 5, 0) -- Lebih tinggi
    elseif dotY < -0.8 then 
        idealPos = pos - Vector3.new(0, 6, 0)
        isCeiling = true
    else 
        -- Jarak 6 Studs (Sebelumnya 4.5). Max Prompt Distance biasanya 10, jadi 6 masih AMAN.
        idealPos = pos + (look * 6.0)
    end

    if not isCeiling then
        local rayOrigin = idealPos + Vector3.new(0, 5, 0) 
        local rayDirection = Vector3.new(0, -20, 0)
        
        local params = RaycastParams.new()
        params.FilterDescendantsInstances = {LocalPlayer.Character, crystalPart}
        params.FilterType = Enum.RaycastFilterType.Exclude
        
        local result = workspace:Raycast(rayOrigin, rayDirection, params)
        
        if result then
            local groundY = result.Position.Y + 3.5
            idealPos = Vector3.new(idealPos.X, groundY, idealPos.Z)
        end
    end

    if isCeiling then
        return CFrame.lookAt(idealPos, pos)
    else
        local lookTarget = Vector3.new(pos.X, idealPos.Y, pos.Z)
        return CFrame.lookAt(idealPos, lookTarget)
    end
end

-- ====================================================
-- [MINING EXECUTION]
-- ====================================================

local function MineCrystal(node)
    local prompt = node:FindFirstChildWhichIsA("ProximityPrompt", true)
    if not prompt then return end
    local part = prompt.Parent
    if not part then return end

    MakeTransparent(part)
    MakeTransparent(node) 

    local targetCF = GetGroundedPosition(part)
    FlyTo(targetCF)
    
    -- [NEW] RESET KAMERA SETELAH TELEPORT
    ResetCameraAngle()
    
    local hrp = GetRoot()
    -- Safety Check Jarak
    if (hrp.Position - part.Position).Magnitude > prompt.MaxActivationDistance then
        hrp.CFrame = CFrame.lookAt(part.Position + (hrp.CFrame.LookVector * -4), part.Position)
    end
    
    SetAnchor(true)
    task.wait(0.1)
    
    local locker = Services.RunService.RenderStepped:Connect(function()
        if hrp and States.IsMining then hrp.CFrame = targetCF end
    end)
    
    fireproximityprompt(prompt)
    
    local start = tick()
    repeat 
        task.wait(0.1)
    until not prompt.Parent or not prompt.Enabled or (tick() - start > 8.5)
    
    if locker then locker:Disconnect() end
end

local function ProcessLocation(folderName)
    local Islands = Services.Workspace:WaitForChild("Islands", 5)
    if not Islands then return false end

    local targetFolder
    if folderName == "Lava" then
        targetFolder = Islands:FindFirstChild("Lava Basin") and Islands["Lava Basin"]:FindFirstChild("Crystals")
    elseif folderName == "Deep" then
        targetFolder = Islands:FindFirstChild("Crystal Depths") and Islands["Crystal Depths"]:FindFirstChild("Crystals")
    end

    if not targetFolder then return false end

    local crystals = {}
    for _, v in pairs(targetFolder:GetChildren()) do
        if v:FindFirstChildWhichIsA("ProximityPrompt", true) then table.insert(crystals, v) end
    end

    if #crystals == 0 then return false end 

    local hrp = GetRoot()
    table.sort(crystals, function(a,b)
        return (a:GetPivot().Position - hrp.Position).Magnitude < (b:GetPivot().Position - hrp.Position).Magnitude
    end)

    for i, node in ipairs(crystals) do
        if not States.AutoCrystal then break end
        Notify("Mining ["..i.."/"..#crystals.."]", Color3.fromRGB(255, 255, 255))
        MineCrystal(node)
        task.wait(0.2)
    end
    return true
end

-- ====================================================
-- [ROUTINE]
-- ====================================================

local function AutoFish()
    if States.IsMining then return end
    States.IsFishing = true
    
    local hrp = GetRoot()
    if States.SavedHomeCFrame and hrp and (hrp.Position - States.SavedHomeCFrame.Position).Magnitude > 500 then
        Notify("Returning Home...", Color3.fromRGB(0, 255, 0))
        SetAnchor(false)
        hrp.CFrame = States.SavedHomeCFrame + Vector3.new(0,2,0)
        task.wait(1)
    end

    Notify("Fishing Mode", Color3.fromRGB(0, 200, 255))
    SetAnchor(true)
    EquipTool("rod")

    while States.AutoCrystal and States.IsFishing and not States.IsMining do
        pcall(function()
            NetPath["RF/UpdateAutoFishingState"]:InvokeServer(true)
            NetPath["RF/ChargeFishingRod"]:InvokeServer()
            task.wait(1.5)
            NetPath["RF/RequestFishingMinigameStarted"]:InvokeServer(-0.99, 0.5, os.time())
            task.wait(2.2)
            NetPath["RF/CatchFishCompleted"]:InvokeServer()
        end)
        task.wait(0.2)
    end
end

local function FullRoutine(force)
    if States.IsMining then return end
    States.IsMining = true
    States.IsFishing = false
    
    local hrp = GetRoot()
    if not States.SavedHomeCFrame or force then States.SavedHomeCFrame = hrp.CFrame end
    
    local noclip = EnableNoClip()
    EquipTool("pick")

    hrp.CFrame = Locations.LavaBasin
    task.wait(1.5)
    local foundLava = ProcessLocation("Lava")

    if States.AutoCrystal then
        hrp.CFrame = Locations.CrystalDepths
        task.wait(1.5)
        local foundDeep = ProcessLocation("Deep")
        if not foundLava and not foundDeep then Notify("ZONK", Color3.fromRGB(255, 50, 50)) end
    end

    if noclip then noclip:Disconnect() end
    States.IsMining = false
    task.spawn(AutoFish)
end

ToggleBtn.MouseButton1Click:Connect(function()
    States.AutoCrystal = not States.AutoCrystal
    if States.AutoCrystal then
        ToggleBtn.Text = "STOP"
        ToggleBtn.BackgroundColor3 = Color3.fromRGB(0, 200, 100)
        local min = os.date("!*t").min
        if min >= 0 and min <= 45 then
            Notify("Starting Mining...", Color3.fromRGB(255, 215, 0))
            task.spawn(function() FullRoutine(true) end)
        else
            Notify("Fishing Time...", Color3.fromRGB(0, 200, 255))
            if GetRoot() then States.SavedHomeCFrame = GetRoot().CFrame end
            task.spawn(AutoFish)
        end
    else
        ToggleBtn.Text = "START"
        ToggleBtn.BackgroundColor3 = Color3.fromRGB(255, 50, 50)
        Notify("Stopped.", Color3.fromRGB(255, 0, 0))
        States.IsMining = false
        States.IsFishing = false
        SetAnchor(false)
        if LocalPlayer.Character then
             for _, part in pairs(LocalPlayer.Character:GetDescendants()) do
                if part:IsA("BasePart") then part.CanCollide = true end
            end
        end
    end
end)

task.spawn(function()
    while true do
        task.wait(5)
        if States.AutoCrystal and not States.IsMining then
            local min = os.date("!*t").min
            if min >= 0 and min <= 5 and States.IsFishing then
                FullRoutine(false)
            end
        end
    end
end)
